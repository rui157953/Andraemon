<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="false">
        <layer-list>
            <item android:width="30dp" android:height="30dp" android:gravity="center">
                <shape android:shape="oval">
                    <size android:width="30dp" android:height="30dp" />
                    <solid android:color="?android:attr/colorAccent" />
                    <stroke android:width="1dp" android:color="@color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true" android:state_enabled="true">
        <layer-list>
            <item android:width="30dp" android:height="30dp" android:gravity="center">
                <shape android:shape="oval">
                    <size android:width="30dp" android:height="30dp" />
                    <solid android:color="?android:attr/colorAccent" />
                    <stroke android:width="1dp" android:color="@color/transparent" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_checked="false" android:state_enabled="false">
        <layer-list>
            <item android:width="30dp" android:height="30dp" android:gravity="center">
                <shape android:shape="oval">
                    <size android:width="30dp" android:height="30dp" />
                    <solid android:color="?android:attr/colorControlHighlight" />
                    <stroke android:width="2dp" android:color="@color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false" android:state_enabled="true">
        <layer-list>
            <item android:width="30dp" android:height="30dp" android:gravity="center">
                <shape android:shape="oval">
                    <size android:width="30dp" android:height="30dp" />
                    <solid android:color="?android:attr/colorAccent" />
                    <stroke android:width="2dp" android:color="@color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>